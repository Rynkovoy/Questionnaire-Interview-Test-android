<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMainBackground"
    android:gravity="center|top"
    android:orientation="vertical"
    tools:context="com.qit.android.activity.AuthorizationActivity"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <ImageView
        android:id="@+id/imageLogo"
        android:layout_width="220dp"
        android:layout_height="120dp"
        android:src="@drawable/qit_logo"
        android:layout_marginTop="70dp"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tilLogin"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:hintTextAppearance="@style/HintTextLight"
        android:textColorHint="@color/colorAuthHintText">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/etLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="@string/auth_login"
            android:textColor="@color/colorAuthText"
            android:backgroundTint="@color/colorAuthHintText"/>

    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:id="@+id/tilPassword"
        app:passwordToggleEnabled="true"
        app:passwordToggleTintMode="multiply"
        app:passwordToggleTint="#bb2daae1"
        app:hintTextAppearance="@style/HintTextLight"
        android:textColorHint="@color/colorAuthHintText">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/auth_password"
            android:inputType="textPassword"
            android:textColor="@color/colorAuthText"
            android:backgroundTint="@color/colorAuthHintText"/>

    </android.support.design.widget.TextInputLayout>

    <Button
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:id="@+id/btnLogIn"
        android:text="@string/log_in"
        android:background="@drawable/button_login_green_rounded_corners"
        android:textColor="@color/colorAuthText"
        android:layout_marginTop="40dp"
        android:onClick="logIn" />

</LinearLayout>
