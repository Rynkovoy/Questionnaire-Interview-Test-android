<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.qit.android.activity.RegistrationActivity"
    android:orientation="vertical">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:theme="@style/ThemeOverlay.AppCompat.Dark" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        tools:layout_editor_absoluteX="8dp"
        tools:ignore="MissingConstraints"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilLoginReg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="36dp"
            android:textColorHint="@color/colorAuthHintText"
            app:hintTextAppearance="@style/HintTextLight"
            tools:ignore="MissingConstraints">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/etLoginReg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorAuthHintText"
                android:hint="@string/auth_login"
                android:inputType="textEmailAddress"
                android:textColor="@color/colorAuthText" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilLoginPass1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="36dp"
            android:textColorHint="@color/colorAuthHintText"
            app:hintTextAppearance="@style/HintTextLight"
            tools:ignore="MissingConstraints">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/etPass1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorAuthHintText"
                android:hint="@string/auth_login"
                android:inputType="textEmailAddress"
                android:textColor="@color/colorAuthText" />
        </android.support.design.widget.TextInputLayout>

    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/btnNextReg"
        android:layout_width="373dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="476dp"
        android:background="@drawable/button_login_green_rounded_corners"
        android:text="Next" />

</LinearLayout>
