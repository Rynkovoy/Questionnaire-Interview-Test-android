<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="24dp"
    android:background="@drawable/back_ground_img_login"
    android:orientation="vertical"
    android:descendantFocusability="beforeDescendants"
    tools:context="com.qit.android.activity.RegistrationActivity">


    <ImageView
        android:id="@+id/regLogoImg"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_weight="1"
        android:src="@drawable/qit_logo"
        android:transitionName="appLogo" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:background="@color/cardview_shadow_start_color"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="User info:"
                    android:textColor="@color/colorAuthText"
                    android:textSize="14sp" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    android:textColorHint="@color/colorAuthText"
                    tools:ignore="MissingConstraints">

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/regUserLogin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorAuthText"
                        android:hint="E-mail"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/colorAuthText" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    android:textColorHint="@color/colorAuthText"
                    tools:ignore="MissingConstraints">

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/regUserPassFirst"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorAuthText"
                        android:hint="Password"
                        android:inputType="text"
                        android:textColor="@color/colorAuthText" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    android:textColorHint="@color/colorAuthText"
                    tools:ignore="MissingConstraints">

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/regUserPassSec"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorAuthText"
                        android:hint="Password repeat"
                        android:inputType="text"
                        android:textColor="@color/colorAuthText" />

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:background="@color/cardview_shadow_start_color"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="Personal info:"
                    android:textColor="@color/colorAuthText"
                    android:textSize="14sp" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    android:textColorHint="@color/colorAuthText"
                    tools:ignore="MissingConstraints">

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/regUserFirstName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorAuthText"
                        android:hint="First name"
                        android:inputType="textCapWords"
                        android:textColor="@color/colorAuthText" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    android:textColorHint="@color/colorAuthText"
                    tools:ignore="MissingConstraints">

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/regUserLastName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorAuthText"
                        android:hint="Last name"
                        android:inputType="textCapWords"
                        android:textColor="@color/colorAuthText" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    android:textColorHint="@color/colorAuthText"
                    tools:ignore="MissingConstraints">

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/regUserPhoneNum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorAuthText"
                        android:hint="Phone number +380"
                        android:inputType="phone"
                        android:textColor="@color/colorAuthText" />

                </android.support.design.widget.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:textColorHint="@color/colorAuthText"
                        tools:ignore="MissingConstraints">

                        <android.support.v7.widget.AppCompatEditText
                            android:id="@+id/regUserBirthDay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/colorAuthText"
                            android:hint="Birth day DD.MM.YYYY"
                            android:textColor="@color/colorAuthText"
                            android:textSize="14sp" />

                    </android.support.design.widget.TextInputLayout>

                    <Button
                        android:id="@+id/regBtnCalendar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:drawable/ic_menu_month" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:background="@color/cardview_shadow_start_color"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="Additional info:"
                    android:textColor="@color/colorAuthText"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    android:orientation="vertical"
                    android:textColorHint="@color/colorAuthText"
                    tools:ignore="MissingConstraints">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Gender"
                        android:textColor="@color/colorAuthText" />

                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/regUserGender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorAuthText" />
                </LinearLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    android:textColorHint="@color/colorAuthText"
                    tools:ignore="MissingConstraints">

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/regUserInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorAuthText"
                        android:hint="About yourself"
                        android:inputType="text"
                        android:textColor="@color/colorAuthText" />

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/regBtnSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:paddingBottom="8dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp"
        android:text="Register"
        android:textAlignment="textEnd"
        android:textColor="@color/colorAuthText"
        android:textSize="18sp"
        android:textStyle="bold" />

</LinearLayout>
